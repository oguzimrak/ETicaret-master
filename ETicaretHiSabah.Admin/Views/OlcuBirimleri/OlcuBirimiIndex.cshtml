@using ETicaret.BLL;
@{
    ViewBag.Title = "OlcuBirimiIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    OlcuBirimleriManager olcman = new OlcuBirimleriManager();
}

<div class="content-wrapper">
    <!-- left column -->
    <div class="col-md-12 col-lg-8 offset-lg-2">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">ÖLÇÜ BİRİMLERİ</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form role="form" action="/OlcuBirimleri/OlcuBirimiIndex" method="post" enctype="multipart/form-data">
                    <!-- text input -->
                    <div class="form-group">
                        <label>ÖLÇÜ BİRİMİ ADI</label>
                        <input name="textolcubirimiAdi" type="text" class="form-control" placeholder="Ölçü birimi giriniz">
                    </div>
                    <div class="form-group">
                        <label>AÇIKLAMA</label>
                        <input name="textolcubirimiaciklama" type="text" class="form-control" placeholder="Açıklama giriniz">
                    </div>
                    <div class="label" style="width:40%;margin-left:30%;">
                        <button class="btn btn-block btn-outline-success btn-flat">KAYDET</button>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ölçü Birimleri Listesi</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 10px">ID</th>
                        <th>ÖLÇÜ BİRİMİ ADI</th>
                        <th>AÇIKLAMA</th>
                        <th style="width: 40px">GÜNCELLE</th>
                        <th style="width: 40px">SİL</th>
                    </tr>
                    @foreach (var item in olcman.OlcuBirimiGetir())
                    {
                        <tr>
                            <td>@item.OlcuBirimleriID</td>
                            <td>@item.OlcuBirimiAdi</td>
                            <td>@item.Aciklama</td>
                            <td>@Html.ActionLink("GÜNCELLE", "OlcuBirimiGuncelle", new { OlcuBirimi_ID = item.OlcuBirimleriID })</td>
                            <td><button class="btn btn-danger">Sil</button></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
            </ul>
        </div>
    </div>
</div>

